        <Button x:Name="output_dir_btn" Content="..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="35" Height="26" PreviewMouseDown="output_dir_btn_PreviewMouseDown"/>
        <CheckBox x:Name="hrd_checkbox" Content="    HDR Training Data" HorizontalAlignment="Left" Margin="20,41,0,0" VerticalAlignment="Top" Foreground="White" IsChecked="True"/>
