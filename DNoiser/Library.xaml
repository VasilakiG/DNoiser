<Page x:Class="DNoiser.Library"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="255" d:DesignWidth="519"
	Title="Library">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="112*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="import_dir" Content="Import Directory" Grid.Column="0" Margin="19,10,15,0" VerticalAlignment="Top" Height="29" PreviewMouseDown="import_dir_PreviewMouseDown"/>
        <Button x:Name="import_img" Content="Import Image" Grid.Column="0" Margin="19,0,15,182" VerticalAlignment="Bottom" Height="29" PreviewMouseDown="import_img_PreviewMouseDown"/>
        <ListBox x:Name="queue_list" Grid.Column="1" Margin="10" Background="Transparent" Foreground="White"/>
        <Button x:Name="clear_lib" Content="Clear Library" Grid.Column="0" Margin="19,0,15,10" VerticalAlignment="Bottom" Height="29" PreviewMouseDown="clear_lib_PreviewMouseDown"/>
    </Grid>
</Page>
